<div id="<%= dom_id ingredient %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= ingredient.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Category:</strong>
    <%= ingredient.category %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= ingredient.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Notes:</strong>
    <%= ingredient.notes %>
  </div>

  #Tags Section
  <p class="mt-4">
  <strong>Tags:</strong>
  <% if ingredient.tags.any? %>
    <div class="flex flex-wrap gap-2 mt-1">
      <% ingredient.tags.each do |tag| %>
        <span class="inline-block bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded-full border border-blue-400">
          <%= tag.name %>
        </span>
      <% end %>
    </div>
  <% else %>
    <span class="text-gray-500 italic">No tags selected</span>
  <% end %>
</p>
</div>
